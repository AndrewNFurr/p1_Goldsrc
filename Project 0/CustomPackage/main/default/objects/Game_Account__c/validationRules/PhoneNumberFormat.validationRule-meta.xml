<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PhoneNumberFormat</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(REGEX(Phone_Number__c, &quot;\\D*?(\\d\\D*?){10}&quot;)),  NOT(ISBLANK(Phone_Number__c))  )</errorConditionFormula>
    <errorDisplayField>Phone_Number__c</errorDisplayField>
    <errorMessage>Phone number in wrong format. Please change to (XXX)-XXX-XXXX</errorMessage>
</ValidationRule>
