<aura:component controller="gameLibraryController">
	<aura:attribute name="myGames" type="Game__c[]" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <div class="allcom">
    	<p style="color: rgb(77, 0, 153); font-size: 25px; font-weight: 900;text-align: center;">Most Popular Games: </p>
        <br />
        <aura:iteration items="{!v.myGames}" var="game">
            <div class="mysetup" style="margin: auto;margin-top: 1%;">
                <c.gameStoreItem myStoreGame="{!game}" />
                <br />
            </div>
        </aura:iteration>
    </div>
    
</aura:component>