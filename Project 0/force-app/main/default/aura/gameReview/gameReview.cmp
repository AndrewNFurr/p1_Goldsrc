<aura:component >
    <aura:attribute name="review" type="Game_Reviews__c"/>
    <lightning:card>
        <div class="slds-page-header">
          <div class="slds-page-header__row">
            <div class="slds-page-header__col-title">
              <div class="slds-media">
                <div class="slds-media__figure">
                  <span class="slds-icon_container slds-icon-standard-opportunity" title="Game Review">
                    
                    <span class="slds-assistive-text">game</span>
                  </span>
                </div>
                <div class="slds-media__body">
                  <div class="slds-page-header__name">
                    <div class="slds-page-header__name-title">
                      <h1>
                        <span class="slds-page-header__title slds-truncate" title="{!v.review.Name}">{!v.review.Name}</span>
                      </h1>
                    </div>
                  </div>
                  <p class="slds-page-header__name-meta">{!v.review.Reviewer__c}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="slds-card__body">
      
        </div>
    </lightning:card>
</aura:component>