<aura:component implements="flexiPage:availableForAllPageTypes" controller="DevGameListController">
    <aura:handler event="c:choseGame" action="{!c.handleChoice}"/>
    <aura:attribute name="game" type="Game__c"/>
    <aura:attribute name="newReview" type="Game_Reviews__c"/>
    <aura:attribute name="display" type="Boolean" default="false"/>
    
    <aura:if isTrue="{!v.display}">
        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal  slds-fade-in-open">
                <div class="slds-modal__container">
                    <!-- Modal/Popup Box Header Starts here-->
                    <header class="slds-modal__header">
                        <lightning:buttonIcon iconName="utility:close"
                                              onclick="{! c.displayFalse }"
                                              alternativeText="close"
                                              variant="bare-inverse"
                                              class="slds-modal__close"/>
                        <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Review</h2>
                    </header>
                    <!--Modal/Popup Box Body Starts here-->
                    <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                        <lightning:recordEditForm objectApiName="Game_Reviews__c" 
                                      aura:id="createReview"
                                      class="slds-grid
                                             slds-modal__content">
                            <div class="slds-grid slds-grid_vertical">
                                    <lightning:inputField fieldName="Game_Name__c" value="{!v.game.Id}" />
                                    <lightning:inputField fieldName="Name" />
                                    <lightning:inputField fieldName="Reviewer__c" />
                                    <lightning:inputField fieldName="User_Star_Rating__c" />
                                	<lightning:inputField fieldName="Review__c" />
                            </div>
                            <lightning:button class="slds-m-around_small" onclick="{!c.submit}" label="Submit Review" />
                        </lightning:recordEditForm>
                    </div>
                    <!--Modal/Popup Box Footer Starts here-->
                    <footer class="slds-modal__footer">
                      
                        <lightning:button class="slds-m-top_small" type="reset" label="Cancel" onclick="{!c.displayFalse}"/>
                    </footer>
                </div>
            </section>
            <div class="slds-backdrop slds-backdrop_open"></div>
    </aura:if>
</aura:component>