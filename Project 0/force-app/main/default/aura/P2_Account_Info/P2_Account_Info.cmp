<aura:component controller="AccountComponentController">
    <aura:attribute name="recordId" type="string" />
    <aura:attribute name="show" type="boolean" default="false" />
    <aura:attribute name="oldPassword" type="string" default="" />
    <aura:attribute name="newPassword" type="string" default="" />
    <aura:attribute name="error" type="string" default="" />


    <aura:handler name="init" value="{!this}" action="{!c.init}"/>
	<lightning:recordEditForm 
        recordId = "{!v.recordId}"
        objectApiName="Game_Account__c">
        
    	<lightning:messages />
        <div class="slds-grid slds-wrap">
                <div class="slds-col slds-size_1-of-1">
                    <lightning:inputField fieldName="Name" class="Test"/>
                </div>
                <div class="slds-col slds-size_1-of-1">
                    <lightning:inputField fieldName="About_ME__c"/>
                </div>
            	<div class="slds-col slds-size_1-of-2">
                    <lightning:inputField fieldName="Address_1__c"/>
                </div>
                <div class="slds-col slds-size_1-of-2">
                    <lightning:inputField fieldName="Date_Of_Birth__c"/>
                </div>
            	<div class="slds-col slds-size_1-of-2">
                    <lightning:inputField fieldName="First_Name__c"/>
                </div>
                <div class="slds-col slds-size_1-of-2">
                    <lightning:inputField fieldName="Last_Name__c"/>
                </div>
            	<div class="slds-col slds-size_1-of-2">
                    <lightning:inputField fieldName="Email__c"/>
                </div>
                <div class="slds-col slds-size_1-of-2">
                    <lightning:inputField fieldName="Phone_Number__c"/>
                </div>
            </div>
        <lightning:button class="slds-m-top_small" variant="brand" type="submit" label="Save" onclick="{!c.handleClick}" />
        <lightning:button class="slds-m-top_small" variant="brand" label="Reset Password" onclick="{!c.handleResetPassword}" />
    </lightning:recordEditForm>
    <aura:if isTrue="{!v.show}">
        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
          <div class="slds-modal__container">
            <header class="slds-modal__header">
              <button class="slds-button slds-button_icon slds-modal__close slds-button_icon-inverse" title="Close">
                <span class="slds-assistive-text">Close</span>
              </button>
              <h2 id="modal-heading-01" class="slds-modal__title slds-hyphenate">Reset Your Password</h2>
              <p class="slds-m-top_x-small">Reset Your Password Below</p>
            </header>
            <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                <lightning:input type="password" name="oldPass" aura:id="oldPass" label="Enter Your Old Password" value="{!v.oldPassword}" />
                <lightning:input type="password" name="newPass" aura:id="newPass" label="Enter Your New Password" value="{!v.newPassword}" />
            </div>
            <footer class="slds-modal__footer">
              <button class="slds-button slds-button_neutral" onclick="{!c.handleModalCancel}">Cancel</button>
              <button class="slds-button slds-button_brand" onclick="{!c.handleModalSave}">Save</button>
            </footer>
          </div>
        </section>
   
    	<div class="slds-backdrop slds-backdrop_open"></div>
    </aura:if>
</aura:component>