<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Credit_Card_Number_Length</fullName>
    <active>true</active>
    <errorConditionFormula>NOT( REGEX(  Card_Number__c  , &quot;(((\\d{4}-){3}\\d{4})|\\d{16})?&quot;))</errorConditionFormula>
    <errorDisplayField>Card_Number__c</errorDisplayField>
    <errorMessage>Credit Card Number Invalid</errorMessage>
</ValidationRule>
